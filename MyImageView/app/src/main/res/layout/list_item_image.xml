<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_130dp"
    android:layout_margin="@dimen/size_2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size_2dp"
        android:background="@color/back_color">

        <ImageView
            android:id="@+id/image_id"
            android:layout_width="@dimen/size_120dp"
            android:layout_height="@dimen/size_120dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/item_image"
            android:padding="@dimen/size_3dp" />

        <TextView
            android:id="@+id/title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/size_4dp"
            android:layout_toEndOf="@+id/image_id"
            android:layout_toRightOf="@+id/image_id" />
    </RelativeLayout>

</android.support.v7.widget.CardView>